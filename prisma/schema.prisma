generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  icon       String
  registered Boolean    @default(true)
  status     ItemStatus @default(disponível)
  createdAt  DateTime   @default(now())
}

enum ItemStatus {
  disponível
  sacola
}
