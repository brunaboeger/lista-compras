generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id        String     @id @default(uuid())
  name      String     @unique
  icon      String?
  createdAt DateTime   @default(now())
  status    ItemStatus @default(DISPONIVEL)
  updatedAt DateTime   @default(now()) @updatedAt
  price     String?
}

model Icon {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ItemStatus {
  DISPONIVEL
  SACOLA
}
